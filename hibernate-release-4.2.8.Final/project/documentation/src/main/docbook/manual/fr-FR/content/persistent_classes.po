"            type=\"string\"/&gt;\n"
"\n"
"        &lt;many-to-one name=\"organization\"\n"
"            column=\"ORGANIZATION_ID\"\n"
"            class=\"Organization\"/&gt;\n"
"\n"
"        &lt;bag name=\"orders\"\n"
