"&lt;one-to-one\n"
"        name=\"propertyName\"\n"
"        class=\"ClassName\"\n"
"        cascade=\"cascade_style\"\n"
"        constrained=\"true|false\"\n"
"        fetch=\"join|select\"\n"
"        property-ref=\"propertyNameFromAssociatedClass\"\n"
"        access=\"field|property|ClassName\"\n"
"        formula=\"any SQL expression\"\n"
