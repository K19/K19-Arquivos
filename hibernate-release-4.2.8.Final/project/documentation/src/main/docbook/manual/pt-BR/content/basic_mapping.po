"        length=\"N\"\n"
"        precision=\"N\"\n"
"        scale=\"N\"\n"
"        not-null=\"true|false\"\n"
"        unique=\"true|false\"\n"
"        unique-key=\"multicolumn_unique_key_name\"\n"
